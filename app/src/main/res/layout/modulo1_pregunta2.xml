<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:padding="@dimen/margin15dp"
        android:background="@drawable/borde_layout_preguntas">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modulo1_pregunta2"
            android:layout_marginBottom="@dimen/fab_margin"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin10dp"
            android:layout_margin="@dimen/margin5dp"
            android:background="@drawable/border_layout_subpreguntas">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actividad Secundaria 1"
                android:layout_marginBottom="@dimen/margin5dp"/>
            <EditText
                android:id="@+id/mod1_p2_edtActividadSecundaria1"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="@dimen/margin5dp"
                android:background="@drawable/cajas_de_texto"
                android:layout_marginBottom="@dimen/margin10dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/codigo_ciiu"
                    android:textColor="@color/primary_text"
                    android:layout_marginRight="@dimen/margin15dp"/>
                <EditText
                    android:id="@+id/mod1_p2_edtCIUSecundaria1"
                    android:paddingLeft="@dimen/margin5dp"
                    android:inputType="numberPassword"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:maxLength="4"
                    android:background="@drawable/cajas_de_texto"/>
            </LinearLayout>
            <CheckBox
                android:id="@+id/mod1_p2_ckNoActividadSec2"
                android:layout_marginTop="@dimen/margin5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No tengo otra actividad secundaria"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mod1_p2_lytActividadSecundaria2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin10dp"
            android:layout_margin="@dimen/margin5dp"
            android:background="@drawable/border_layout_subpreguntas">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actividad Secundaria 2"
                android:layout_marginBottom="@dimen/margin5dp"/>
            <EditText
                android:id="@+id/mod1_p2_edtActividadSecundaria2"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="@dimen/margin5dp"
                android:background="@drawable/cajas_de_texto"
                android:layout_marginBottom="@dimen/margin10dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/codigo_ciiu"
                    android:textColor="@color/primary_text"
                    android:layout_marginRight="@dimen/margin15dp"/>
                <EditText
                    android:id="@+id/mod1_p2_edtCIUSecundaria2"
                    android:inputType="numberPassword"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:maxLength="4"
                    android:paddingLeft="@dimen/margin5dp"
                    android:background="@drawable/cajas_de_texto"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>