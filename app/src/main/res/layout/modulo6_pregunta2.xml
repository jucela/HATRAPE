<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/mod6_p2_lytPregunta2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:padding="@dimen/margin15dp"
    android:background="@drawable/borde_layout_preguntas"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod6_p2"
        android:layout_marginBottom="@dimen/fab_margin"/>
    <RadioGroup
        android:id="@+id/mod6_p2_rgbp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:layout_margin="@dimen/margin10dp">
        <RadioButton
            android:id="@+id/mod6_p2_rgp2b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SI"/>
        <RadioButton
            android:id="@+id/mod6_p2_rgp2b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO"/>
    </RadioGroup>
    <LinearLayout
        android:id="@+id/mod6_p2_lytSpUno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10dp"
        android:orientation="horizontal"
        android:padding="@dimen/margin10dp"
        android:background="@drawable/border_layout_subpreguntas">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin15dp"
            android:text="NÃºmero de trabajadores"
            android:textColor="@color/primary_text" />

        <EditText
            android:id="@+id/mod6_p2_edtEspecificarNroTrabajadores"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/cajas_de_texto"
            android:inputType="number"
            android:layout_marginRight="30dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin15dp"
            android:text="Porcentaje de trabajadores"
            android:textColor="@color/primary_text" />

        <EditText
            android:id="@+id/mod6_p2_edtEspecificarPorcentajeTrabajadores"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/cajas_de_texto"
            android:inputType="number"
            android:layout_marginRight="30dp"/>
    </LinearLayout>
</LinearLayout>